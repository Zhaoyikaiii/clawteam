# ClawTeam Agent Runtime Environment Configuration

# API Configuration
CLAWTEAM_API_HOST=0.0.0.0
CLAWTEAM_API_PORT=8080
CLAWTEAM_API_WORKERS=1

# LLM Configuration
CLAWTEAM_ANTHROPIC_API_KEY=your-anthropic-api-key
CLAWTEAM_OPENAI_API_KEY=your-openai-api-key
CLAWTEAM_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Database Configuration
CLAWTEAM_DATABASE_URL=postgresql+asyncpg://clawteam:password@localhost:5432/clawteam
CLAWTEAM_DATABASE_POOL_SIZE=10
CLAWTEAM_DATABASE_MAX_OVERFLOW=20

# NATS Configuration
CLAWTEAM_NATS_URL=nats://localhost:4222
CLAWTEAM_NATS_USER=
CLAWTEAM_NATS_PASSWORD=
CLAWTEAM_NATS_SUBJECT_PREFIX=clawteam

# Vector Database Configuration
CLAWTEAM_QDRANT_URL=http://localhost:6333
CLAWTEAM_QDRANT_API_KEY=

# Execution Configuration
CLAWTEAM_JOB_TIMEOUT_SECONDS=60
CLAWTEAM_MAX_CONCURRENT_JOBS=10

# Logging Configuration
CLAWTEAM_LOG_LEVEL=INFO
CLAWTEAM_LOG_FORMAT=json

# Feature Flags
CLAWTEAM_ENABLE_METRICS=true
CLAWTEAM_ENABLE_TRACING=false
